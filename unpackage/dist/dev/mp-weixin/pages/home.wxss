CC .out {
  color: #ff4e4f;
}
.inc {
  color: #46be60;
}
.content-pad {
  padding: 10rpx 32rpx;
}
.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.unit, .year .year_money {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}
.text--title {
  color: #ff4e4f;
  line-height: 80rpx;
  height: 80rpx;
}
.text--large {
  font-weight: bold;
  font-size: 40rpx;
}
.space {
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.year {
  position: relative;
  background: #ffe0e2;
  line-height: 2;
  border-radius: 17px;
  overflow: hidden;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.year .year_money {
  margin-left: 5px;
}
.year .year-btn .year-image {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 150px;
}
.year .year-btn .year_bg1 {
  position: absolute;
  width: 237px;
  height: 178px;
  right: -100px;
  top: -18px;
  background-color: #ffc0c3;
  border-radius: 49px;
  -webkit-transform: rotate(30deg);
  transform: rotate(327deg);
}
.incOrExp,
.current {
  margin-top: 30rpx;
}
.current {
  position: relative;
  background-color: #ffffff;
  border-radius: 12px;
  border: 1px solid #f3f3f3;
  padding: 20rpx 30rpx 40rpx;
  box-sizing: border-box;
}
.current .text--title {
  color: #333;
  font-size: 28rpx;
}
.incOrExp {
  padding: 8rpx 0rpx;
}
.incOrExp .incOrExp_icon {
  display: inline-block;
  width: 24px;
  height: 24px;
  text-align: center;
  border-radius: 50%;
  line-height: 24px;
}
.incOrExp .incOrExp_out,
.incOrExp .incOrExp_inc {
  font-size: 28rpx;
  line-height: 2;
  width: 45%;
  box-sizing: border-box;
  padding: 20rpx 32rpx;
  background: #ffffff;
  border: 1px solid #f3f3f3;
  border-radius: 12px;
}
.incOrExp .incOrExp_out .text-mg,
.incOrExp .incOrExp_inc .text-mg {
  margin-left: 4px;
}
.incOrExp .incOrExp_out .incOrExp_icon {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  background-color: #ff4e4f;
}
.incOrExp .incOrExp_inc .incOrExp_icon {
  -webkit-transform: rotate(-135deg);
          transform: rotate(-135deg);
  background-color: #46be60;
}
.next {
  background-color: #ffffff;
}
.next .next__title {
  display: flex;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 32rpx 20rpx;
  justify-content: space-between;
  background-color: whitesmoke;
}
.next .next__title .out {
  color: #ff4e4f;
}
.next .next__item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  line-height: 1.5;
  height: 60px;
  font-size: 28rpx;
  overflow: hidden;
}
.next .next__item .next__item--fix {
  position: absolute;
  left: 32rpx;
  top: -15px;
  margin-top: 30px;
}
.next .next__item .next__item--left {
  width: 40px;
}
.next .next__item .next__item--right {
  flex: 0 1 auto;
  width: calc(100% - 40px);
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
}
.next .next__item .next__item--right .next__right--text {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.next .next__item .next__item--right .next__right--text text {
  display: block;
}
.calendar-space {
  background-color: #ffffff;
  height: 25px;
}

