.content .flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .unit {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 50rpx;
  font-weight: normal;
}
.content .text--title {
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  color: #fba6a6;
  line-height: 80rpx;
  height: 80rpx;
}
.content .text--large {
  font-weight: bold;
  font-size: 40rpx;
}
.content .space {
  height: 80rpx;
}
.content .space text {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 80rpx;
}
.content .year {
  background: linear-gradient(135deg, #ff6161 0%, #e34242 100%);
  border-radius: 17px;
  color: white;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.content .current,
.content .next {
  background: white;
  border-radius: 12px;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.06);
}
.content .next {
  height: 241px;
}
.content .current {
  position: relative;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.content .current .text--title {
  color: #a2a2a2;
  font-size: 14px;
  padding-top: 40rpx;
}
.content .current .unit {
  font-size: 34rpx;
}
.content .current .text--large {
  font-size: 32rpx;
}
.content .current .current--month {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}

