.content {
  padding: 0;
  padding-bottom: 62px;
}
.content .editor__price {
  padding: 20rpx 32rpx;
  margin-bottom: 10px;
  background-color: #fff;
}
.content .editor__price .editor__input {
  font-family: Arial, Helvetica, sans-serif;
  position: relative;
  display: flex;
  align-items: center;
  font-size: 80rpx;
  font-weight: 600;
  line-height: 1.8;
}
.content .editor__price .editor__input .editor__unit {
  width: 40px;
}
.content .editor__price .editor__input .editor__number {
  flex: 0 1 auto;
  width: calc(100% - 40px);
  overflow-x: auto;
}
.content .editor__price .editor__input .editor__number .price-tip {
  position: absolute;
  background-color: #919191;
  color: white;
  font-size: 10px;
  padding: 0px 4px;
}
.content .editor__price .editor__input .editor__number .price-tip::before {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 5px;
  border: 3px solid transparent;
  border-top: 3px solid #919191;
}
@-webkit-keyframes myCuror {
from {
    opacity: 1;
}
to {
    opacity: 0;
}
}
@keyframes myCuror {
from {
    opacity: 1;
}
to {
    opacity: 0;
}
}
.content .editor__price .editor__input .editor__number text {
  position: relative;
  padding-right: 2px;
  white-space: nowrap;
}
.content .editor__price .editor__input .editor__number text.line::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 2px;
  height: 48px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-color: red;
  -webkit-animation: myCuror 1s ease infinite;
          animation: myCuror 1s ease infinite;
}
.content .editor__price .editor__input .editor_default {
  position: absolute;
  left: 40px;
  width: 200px;
  color: #5f5f5f;
}
.content .editor__footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1px solid #f7f7f7;
}
.content .editor__footer .editor__footer_text {
  display: flex;
  align-items: center;
  color: #ff7245;
  font-size: 14px;
  margin-right: 20px;
}
.content .editor__footer .editor_btn {
  text-align: center;
  line-height: 40px;
  border-radius: 20px;
  width: 120px;
  height: 40px;
  color: #fff;
  background-color: #e34747;
}
.content .editor__footer .editor_btn:active {
  opacity: 0.6;
}
.content .editor__footer .editor_btn.disabled {
  opacity: 0.6;
}

