.keyboard {
  background-color: #f7f7f7;
  padding-bottom: 10rpx;
}
.keyboard .keyboard_title {
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: flex-end;
}
.keyboard .keyboard_title text {
  color: #4b4d50;
}
.keyboard .btn {
  display: inline-block;
  box-sizing: border-box;
  width: 33.3%;
  padding: 0px 1px 2px 1px;
}
.keyboard .btn .btn_key {
  background-color: #fff;
  border-radius: 5px;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 24px;
}
.keyboard .btn .btn_key .iconfont {
  font-size: 28px;
}
.keyboard .btn .btn_key.focus {
  background-color: #cbcdcf;
}
.keyboard .btn .btn_key:active {
  background-color: #efeff0;
}

